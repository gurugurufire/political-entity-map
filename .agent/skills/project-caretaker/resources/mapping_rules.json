{
    "ignore_files": [
        "README.md",
        "TaskBoard.md",
        "AgentGuide.md",
        "AgentHistory.md",
        "GEMINI.md",
        "CLAUDE.md",
        ".gitignore",
        "package.json",
        "package-lock.json",
        "requirements.txt",
        "setup.py",
        "pyproject.toml"
    ],
    "ignore_dirs": [
        ".git",
        ".vscode",
        ".agent",
        "node_modules",
        "venv",
        ".venv",
        "__pycache__",
        "src",
        "docs",
        "assets"
    ],
    "rules": [
        {
            "extensions": [
                ".log",
                ".tmp"
            ],
            "destination": ".agent/logs/archive"
        },
        {
            "extensions": [
                ".md"
            ],
            "destination": "docs/misc"
        },
        {
            "extensions": [
                ".py"
            ],
            "destination": "scripts/misc"
        },
        {
            "extensions": [
                ".png",
                ".jpg",
                ".jpeg",
                ".gif",
                ".webp"
            ],
            "destination": "assets/images"
        },
        {
            "prefixes": [
                "temp_",
                "tmp_"
            ],
            "destination": ".agent/tmp"
        }
    ]
}